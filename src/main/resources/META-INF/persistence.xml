<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="persistenceAnime" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/postgres-pool</jta-data-source>

        <class>fr.univtln.malos_samil.i311.projet.jpa.anime.Anime</class>

        <properties>
            <!-- Les paramÃ¨tres de connexions -->
            <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL.sql"/>
            <property name="ecliselink.drop-ddl-jdbc-file-name" value="dropDDL.sql"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>

    </persistence-unit>
    <persistence-unit name="persistenceAnimeLocal" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>fr.univtln.malos_samil.i311.projet.jpa.anime.Anime</class>

        <properties>

            <property name="javax.persistence.target-database" value="PostgreSQL"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dba"/>
            <property name="javax.persistence.jdbc.user" value="Uani"/>
            <property name="javax.persistence.jdbc.password" value="testServer"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
